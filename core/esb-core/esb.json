{
    "import": ["bundle-.*\\.json"],
    "bundles": {
        "internal": {
            "prefixes": {
                "queue": {
                    "consumer": {
                        "internal": true
                    },
                    "producer": {
                        "internal": true
                    }
                },
                "consumer": {
                    "consumer": {
                        "internal": true
                    },
                    "producer": {
                        "internal": true
                    }
                },
                "producer": {
                    "consumer": {
                        "internal": true
                    },
                    "producer": {
                        "internal": true
                    }
                }
            }
        }
    },
    "queues": {
        "rabbitmq": {
            "default": true,
            "consumer": {
                "class": "rabbitmq_c",
                "properties": {
                    "brokerUrl": "amqp://localhost",
                    "queueName": "{endpoint}",
                    "producerOnly": "false"
                }
            },
            "producer": {
                "class": "rabbitmq_p",
                "properties": {
                    "brokerUrl": "{{brokerUrl}}",
                    "queueName": "{endpoint}",
                    "producerOnly": "true"
                }
            }
        }
    },
    "logging": {
        "verbose": true
    },
    "properties": {
        "import": [".*properties.*\\.json"]
    }
}