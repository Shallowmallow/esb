{
    "import": ["bundle-.*\\.json"],
    "bundles": {
        "internal": {
            "prefixes": {
                "queue": {
                    "consumer": {
                        "internal": true
                    },
                    "producer": {
                        "internal": true
                    }
                }
            },
            "types": {
                "bodies": {
                    "raw": {
                        "class": "esb.core.bodies.RawBody"
                    },
                    "json": {
                        "class": "esb.core.bodies.JsonBody"
                    }
                }
            }
        }
    },
    "queues": {
        "rabbitmq": {
            "default": true,
            "consumer": {
                "class": "rabbitmq_c",
                "properties": {
                    "brokerUrl": "amqp://localhost",
                    "queueName": "{endpoint}",
                    "producerOnly": "false"
                }
            },
            "producer": {
                "class": "rabbitmq_p",
                "properties": {
                    "brokerUrl": "{{brokerUrl}}",
                    "queueName": "{endpoint}",
                    "producerOnly": "true"
                }
            },
            "properties": {
                "brokerUrl": "amqp://localhost_1"
            }
        }
    },
    "properties": {
        "import": [".*properties.*\\.json"],
        "brokerUrl": "amqp://localhost_2"
    }
}